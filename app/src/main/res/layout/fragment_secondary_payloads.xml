<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ps5_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- etaHEN Payloads Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/ps5_accent"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="etaHEN Payloads"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ps5_blue"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3">

                    <Button
                        android:id="@+id/btn_send_hen14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send etaHEN 1.4"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_hen15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send etaHEN 1.5"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_hen16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send etaHEN 1.6"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_hen17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send etaHEN 1.7"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_hen18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send etaHEN 1.8"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_hen19"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send etaHEN 1.9"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ELF Payloads Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/ps5_accent"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ELF Payloads"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ps5_blue"
                    android:layout_marginBottom="8dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3">

                    <Button
                        android:id="@+id/btn_send_airpsx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send AirPSX"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_backupdb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send BackupDB"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_backupdbuser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send BackupDbUser"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_ftpsrv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send FTP Server"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_mp4dumper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send MP4 Dumper"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>

                    <Button
                        android:id="@+id/btn_send_self_decrypter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="Send SELF Decrypter"
                        android:backgroundTint="@color/ps5_blue"
                        android:textColor="@color/ps5_text"/>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
